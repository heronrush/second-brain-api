generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  contents Content[]
}

model Content{
  id Int @id @default(autoincrement())
  title String
  description  String?
  link String
  type String
  user User @relation(fields: [userId], references: [id])
  userId Int
  tags Tag[]

}

model Tag {
  id Int @id @default(autoincrement())
  title String
  user_content Content @relation(fields: [tag_id], references: [id])
  tag_id Int
}